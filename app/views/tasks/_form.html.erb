<div class="center-items">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "input" %>
    <%= f.label :details %>
    <%= f.text_field :details, class: "input" %>
      <% unless @task.new_record? %>
        <%= f.label :completed %>
        <%= f.check_box :completed %>
      <% end %>
    <%= f.submit class: "btn-new-task" %>
  <% end %>
</div>
